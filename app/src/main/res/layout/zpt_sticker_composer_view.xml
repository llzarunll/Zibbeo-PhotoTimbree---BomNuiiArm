<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PostCard.ZPTStickerComposerView">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:id="@+id/canvasView"
        android:background="#d1d1d1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:scaleType="fitXY" />
    </FrameLayout>

    <HorizontalScrollView android:id="@+id/thumbnails_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:scrollbars="none"
        android:background="#e1e1e1"
        android:layout_gravity="bottom|right"
        android:layout_below="@+id/canvasView"
        android:layout_centerHorizontal="true">

        <LinearLayout android:id="@+id/StickerBar"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:cropToPadding="true"
            android:layout_gravity="left"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginRight="5dip"/>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/label1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From Top: %d px"
        android:textColor="#9c27b0"
        android:textSize="18sp"
        android:layout_below="@+id/thumbnails_scroll_view"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/label2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From Top: %d px"
        android:textColor="#9c27b0"
        android:textSize="18sp"
        android:layout_alignTop="@+id/label1"
        android:layout_alignParentEnd="true" />
    <TextView
        android:id="@+id/label3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From Top: %d px"
        android:textColor="#9c27b0"
        android:textSize="18sp"
        android:layout_below="@+id/label1"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/label4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From Top: %d px"
        android:textColor="#9c27b0"
        android:textSize="18sp"
        android:layout_alignTop="@+id/label3"
        android:layout_alignParentEnd="true" />
    <TextView
        android:id="@+id/label5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From Top: %d px"
        android:textColor="#9c27b0"
        android:textSize="18sp"
        android:layout_below="@+id/label3"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/nextButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Previous"
        android:id="@+id/previousButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>